{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Mishkat Learning",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint",
    "build": "tsc",
    "watch": "tsc -w",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.0.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
