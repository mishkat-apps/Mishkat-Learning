rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true || 
        request.auth.uid in [
          '8JHu1skI8gR8dAtEACwR87Yvc8q1', // admin@mishkatlearning.com
          'hsevldgtmmfkZ6DqfMjwegawZhT2'  // kazimb@gmail.com
        ]
      );
    }

    match /courses/thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId}/{allPaths=**} {
      // Course resources read access
      allow read: if isSignedIn() && (
        firestore.get(/databases/(default)/documents/courses/$(courseId)).data.accessType == 'free' ||
        firestore.exists(/databases/(default)/documents/enrollments/$(request.auth.uid + '_' + courseId)) ||
        isAdmin()
      );
      allow write: if isAdmin();
    }
    
    match /users/{uid}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == uid || isAdmin();
    }

    // Allow users to upload their own profile pictures
    match /profiles/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && (
        fileName.startsWith(request.auth.uid) || isAdmin()
      );
    }
  }
}
